<?xml version="1.0" encoding="UTF-8" ?>

<!-- Airbus A340 for FlightGear -->
<!-- Mode Control Panel -->

<PropertyList>


	<path>../../../Models/Instruments/Overhead/overhead.ac</path>

 <animation>
  <type>scale</type>
  <x-offset>1</x-offset>
  <y-offset>1.1</y-offset>
  <z-offset>1</z-offset>
 </animation>


<animation>
  <type>material</type>
    <object-name>overhead</object-name>
  <emission>
    <red>0.3</red>
    <green>0.3</green>
    <blue>0.3</blue>
	<factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
</animation>


<!-- Landing Lights-->

<animation>
	<type>pick</type>
	<object-name>landing</object-name>
	<action>
		<button>0</button>
		<repeatable>false</repeatable>	
		<binding>
			<command>property-toggle</command>
			<property>controls/lighting/landing-light</property>
		</binding>
		<binding>
			<command>property-toggle</command>
			<property>controls/lighting/landing-light[1]</property>
		</binding>
		<binding>
			<command>property-toggle</command>
			<property>controls/lighting/landing-light[2]</property>
		</binding>
		<!--binding>
			<command>nasal</command>
			<script>controls.click();</script>
		</binding-->
	</action>
</animation>

<animation>
	<type>rotate</type>
	<object-name>landing</object-name>
	<property>controls/lighting/landing-light</property>
	<property>controls/lighting/landing-light[1]</property>
	<property>controls/lighting/landing-light[2]</property>
	<factor>-25</factor>
	<center>
		<x-m>-0.8447</x-m>
		<y-m>-0.2335</y-m>
		<z-m>0.1940</z-m>
	</center>
	<axis>
		<x>0</x>
		<y>1</y>
		<z>0</z>
	</axis>
</animation>



